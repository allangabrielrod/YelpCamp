<%- include("../partials/header") %>

<div class="container pt-5">
    <h1 class="text-center">Edit Comment</h1>
    <div class="row justify-content-center align-items-center">
        <div class="col-4 pt-3">
            <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <input type="text" id="comment" class="form-control" name="comment[text]" placeholder="Add a new comment"
                        value="<%=comment.text%>" required>
                </div>
                <button type="submit" class="btn btn-lg btn-block btn-outline-secondary">Save</button>
            </form>
            <a href="/campgrounds" class="d-block">Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>