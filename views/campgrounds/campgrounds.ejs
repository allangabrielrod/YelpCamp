<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron my-3">
            <h1 class="display-3">Welcome to Yelpcamp!</h1>
            <p class="lead">View our hand-picked campgrounds from all over the world</p>
            <a href="/campgrounds/new" class="btn btn-primary">Add New Campground</a> 
    </header>

    <div class="row d-flex text-center">
        <%campgrounds.forEach((campground) => {%>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card">
                    <img src="<%=campground.image%>" class="card-img-top">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= campground.name %> 
                        </h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id%>" class="btn btn-outline-success">More info</a>
                    </p>
                </div>
            </div>
            <%});%> 
    </div>
</div>
<%- include("../partials/footer") %> 