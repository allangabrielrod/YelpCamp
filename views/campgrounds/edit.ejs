<%- include("../partials/header") %>

<div class="container pt-5">
    <h1 class="text-center">Edit Campground</h1>
    <div class="row justify-content-center align-items-center">
        <div class="col-4 pt-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Enter campground name</label>
                    <input type="text" id="name" class="form-control" name="campground[name]" placeholder="name"
                        value="<%=campground.name%>" required>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" id="price" class="form-control" name="campground[price]" placeholder="Price" min="0.01"
                        step="0.01" value="<%= campground.price %>" required>
                </div>
                <div class="form-group">
                    <label for="description">Add a Description</label>
                    <input type="text" id="description" class="form-control" name="campground[description]"
                        placeholder="description" value="<%= campground.description %>" required>
                </div>
                <div class="form-group">
                    <label for="img">Enter img url</label>
                    <input type="text" id="img" class="form-control" name="campground[image]" placeholder="image url"
                        value="<%= campground.image %>" required>
                </div>
                <button type="submit" class="btn btn-lg btn-block btn-outline-primary">Save</button>
            </form>
            <a href="/campgrounds" class="d-block">Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>